<script language="javascript">
$(function() {
  var text = $("#render_div").html();
  text = convertTextToMathJaxReady(text);
  $("#render_div").html(text);
  MathJax.Hub.queue.Push(["Typeset", MathJax.Hub, "render_div"]);
});
</script>

<p id="notice"><%= notice %></p>

<form method="post" action="/notes">

<div style="width: 520px; margin: 0 auto;margin-top:20px; background-color: #eee; padding: 20px 10px; border: solid 1px #ddd">
  <div>
    <div id="render_div" class="render_area"><%= @note.content %></div>

      <br/> <br/> <br/>

      Share this note: <br/>
        <input  id="share_note_area" style="display:inline;width:400px" type="text" value="<%= request.url %>">
  </div>
</div>